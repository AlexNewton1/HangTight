<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.softwareoverflow.HangTight">

    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:configChanges="orientation"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.softwareoverflow.HangTight.HomeScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.softwareoverflow.HangTight.NewBasicWorkout"
            android:label="@string/title_activity_new_basic_workout"
            android:screenOrientation="portrait"
            android:configChanges="orientation">
        </activity>
        <activity
            android:name="com.softwareoverflow.HangTight.Workout"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_workout" >
        </activity>
        <activity
            android:name="com.softwareoverflow.HangTight.LoadSavedWorkouts"
            android:label="@string/title_activity_load_saved_workouts"
            android:screenOrientation="portrait"
            android:configChanges="orientation">
        </activity>
        <activity
            android:name="com.softwareoverflow.HangTight.EditSavedWorkout"
            android:label="@string/title_activity_edit_saved_workout"
            android:screenOrientation="portrait"
            android:configChanges="orientation">
        </activity>
        <activity
            android:name="com.softwareoverflow.HangTight.SettingsPage"
            android:label="@string/title_activity_settings_page"
            android:screenOrientation="portrait"
            android:configChanges="orientation">
        </activity>
        <activity
            android:name="com.softwareoverflow.HangTight.HelpPage"
            android:label="@string/title_activity_help_page"
            android:screenOrientation="portrait"
            android:configChanges="orientation">
        </activity>
    </application>

</manifest>
