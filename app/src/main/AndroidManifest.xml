<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.newtonapps.hangtight" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewBasicWorkout"
            android:label="@string/title_activity_new_basic_workout" >
        </activity>
        <activity
            android:name=".Workout"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_workout" >
        </activity>
        <activity
            android:name=".LoadSavedWorkouts"
            android:label="@string/title_activity_load_saved_workouts" >
        </activity>
        <activity
            android:name=".EditSavedWorkout"
            android:label="@string/title_activity_edit_saved_workout" >
        </activity>
    </application>

</manifest>
