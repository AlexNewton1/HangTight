<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loadScreenMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.softwareoverflow.hangtight.ActivityLoadSavedWorkouts">

    <TextView
        style="@style/screenTitles"
        android:text="@string/saved_workouts" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/loadSavedWorkouts_recyclerView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>